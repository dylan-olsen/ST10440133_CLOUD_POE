@model IEnumerable<EventEaseApp2.Models.Booking>
@{
    ViewData["Title"] = "Bookings";
}

<div class="container mt-4">
    <h1 class="mb-4">All Bookings</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">+ Add New Booking</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Event</th>
                <th>Venue</th>
                <th>Booking Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.Event?.EventName</td>
                    <td>@booking.Venue?.VenueName</td>
                    <td>@booking.BookingDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@booking.BookingId" class="btn btn-details btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@booking.BookingId" class="btn btn-edit btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@booking.BookingId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
