@model EventEaseApp2.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<div class="container mt-4">
    <h1 class="mb-4">Booking Details</h1>

    <div class="card">
        <div class="card-body">
            <p class="card-text"><strong>Event:</strong> @Model.Event?.EventName</p>
            <p class="card-text"><strong>Venue:</strong> @Model.Venue?.VenueName</p>
            <p class="card-text"><strong>Date:</strong> @Model.BookingDate.ToShortDateString()</p>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.BookingId" class="btn btn-edit">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

