@model EventEaseApp2.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<div class="container mt-4">
    <h1 class="mb-4 text-danger">Delete Booking</h1>

    <div class="card">
        <div class="card-body">
            <p class="card-text"><strong>Event:</strong> @Model.Event?.EventName</p>
            <p class="card-text"><strong>Venue:</strong> @Model.Venue?.VenueName</p>
            <p class="card-text"><strong>Date:</strong> @Model.BookingDate.ToShortDateString()</p>
        </div>
    </div>

    <div class="alert alert-warning mt-3">
        Are you sure you want to delete this booking?
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BookingId" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
