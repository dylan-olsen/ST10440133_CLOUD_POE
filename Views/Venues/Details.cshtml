@model EventEaseApp2.Models.Venue
@{
    ViewData["Title"] = "Venue Details";
}

<div class="container mt-4">
    <h1 class="mb-4">Venue Details</h1>

    <div class="card">
        <img src="@Model.ImageUrl" class="card-img-top" style="max-height: 300px; object-fit: cover;" alt="Venue Image" />
        <div class="card-body">
            <h5 class="card-title">@Model.VenueName</h5>
            <p class="card-text"><strong>Location:</strong> @Model.Location</p>
            <p class="card-text"><strong>Capacity:</strong> @Model.Capacity</p>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.VenueId" class="btn btn-edit">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
