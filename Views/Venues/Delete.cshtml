@model EventEaseApp2.Models.Venue
@{
    ViewData["Title"] = "Delete Venue";
}

<div class="container mt-4">
    <h1 class="mb-4 text-danger">Delete Venue</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.VenueName</h5>
            <p class="card-text"><strong>Location:</strong> @Model.Location</p>
            <p class="card-text"><strong>Capacity:</strong> @Model.Capacity</p>
        </div>
    </div>

    <div class="alert alert-warning mt-3">
        Are you sure you want to delete this venue?
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VenueId" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
