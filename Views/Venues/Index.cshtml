@model IEnumerable<EventEaseApp2.Models.Venue>
@{
    ViewData["Title"] = "Venues";
}

<div class="container mt-4">
    <h1 class="mb-4">All Venues</h1>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <!-- Add New Venue Card -->
        <div class="col">
            <div class="card text-center h-100 d-flex justify-content-center align-items-center p-4">
                <a asp-action="Create" class="btn btn-outline-primary w-100 h-100 d-flex align-items-center justify-content-center fs-1">
                    +
                </a>
            </div>
        </div>

        @foreach (var venue in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@venue.ImageUrl" class="card-img-top" alt="@venue.VenueName" style="height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@venue.VenueName</h5>
                        <p class="card-text"><strong>Location:</strong> @venue.Location</p>
                        <p class="card-text"><strong>Capacity:</strong> @venue.Capacity</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@venue.VenueId" class="btn btn-details btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@venue.VenueId" class="btn btn-edit btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@venue.VenueId" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

