@model EventEaseApp2.Models.Event
@{
    ViewData["Title"] = "Delete Event";
}

<div class="container mt-4">
    <h1 class="mb-4 text-danger">Delete Event</h1>

    <div class="card">
        <div class="card-body">
            <p class="card-text"><strong>Name:</strong> @Model.EventName</p>
            <p class="card-text"><strong>Date:</strong> @Model.EventDate.ToShortDateString()</p>
            <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        </div>
    </div>

    <div class="alert alert-warning mt-3">
        Are you sure you want to delete this event?
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EventId" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

