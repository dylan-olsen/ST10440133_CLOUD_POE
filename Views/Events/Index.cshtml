@model IEnumerable<EventEaseApp2.Models.Event>
@{
    ViewData["Title"] = "Events";
}

<div class="container mt-4">
    <h1 class="mb-4">All Events</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">+ Add New Event</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Event Name</th>
                <th>Date</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EventName</td>
                    <td>@item.EventDate.ToShortDateString()</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-details btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-edit btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
