@model EventEaseApp2.Models.Event
@{
    ViewData["Title"] = "Event Details";
}

<div class="container mt-4">
    <h1 class="mb-4">Event Details</h1>

    <div class="card">
        <div class="card-body">
            <p class="card-text"><strong>Name:</strong> @Model.EventName</p>
            <p class="card-text"><strong>Date:</strong> @Model.EventDate.ToShortDateString()</p>
            <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.EventId" class="btn btn-edit">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
