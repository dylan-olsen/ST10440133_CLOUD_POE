@{
    ViewData["Title"] = "Welcome";
}

<div class="text-center mt-5">
    <h1 class="display-4 fw-bold">Welcome to EventEase</h1>
    <p class="lead text-muted">Easily manage venues, events, and bookings in one streamlined interface.</p>

    <div class="d-flex justify-content-center mt-4 flex-wrap gap-3">
        <a class="btn btn-primary" asp-controller="Venues" asp-action="Index">Manage Venues</a>
        <a class="btn btn-primary" asp-controller="Events" asp-action="Index">Manage Events</a>
        <a class="btn btn-primary" asp-controller="Bookings" asp-action="Index">Manage Bookings</a>
    </div>
</div>
